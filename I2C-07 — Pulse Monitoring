// I2C-07 Pulse Monitoring
// Continuous pulse monitoring

#include <Wire.h>
#include <MAX30105.h>

MAX30105 sensor;

void setup() {
  Serial.begin(9600);
  Wire.begin();
  sensor.begin(Wire, I2C_SPEED_STANDARD);
  sensor.setup();
}

void loop() {
  long ir = sensor.getIR();
  Serial.println(ir);
  delay(50);
}
