// LED-15 RGB Visualizer
// Visual feedback for activity

#define R 25
#define G 26
#define B 27

void setup() {
  pinMode(R, OUTPUT);
  pinMode(G, OUTPUT);
  pinMode(B, OUTPUT);
}

void loop() {
  digitalWrite(R, HIGH); delay(200);
  digitalWrite(R, LOW);

  digitalWrite(G, HIGH); delay(200);
  digitalWrite(G, LOW);

  digitalWrite(B, HIGH); delay(200);
  digitalWrite(B, LOW);
}
