// SEN-05 Automatic Night Indicator
// Turns LED ON in darkness

#define LDR_PIN 34
#define LED 2

void setup() {
  pinMode(LED, OUTPUT);
}

void loop() {
  int light = analogRead(LDR_PIN);

  if (light < 1500) {
    digitalWrite(LED, HIGH);
  } else {
    digitalWrite(LED, LOW);
  }

  delay(500);
}
