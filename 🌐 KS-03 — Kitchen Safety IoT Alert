// KS-03 Kitchen Safety IoT Alert (Blynk)

#define BLYNK_TEMPLATE_ID "TMPLXXXX"
#define BLYNK_AUTH_TOKEN  "YOUR_TOKEN"

#include <WiFi.h>
#include <BlynkSimpleEsp32.h>

#define FLAME_PIN 32
#define GAS_PIN   34

char ssid[] = "YOUR_WIFI";
char pass[] = "YOUR_PASS";

void setup() {
  Blynk.begin(BLYNK_AUTH_TOKEN, ssid, pass);
}

void loop() {
  int flame = analogRead(FLAME_PIN);
  int gas   = analogRead(GAS_PIN);

  if (flame < 2000 || gas > 2500) {
    Blynk.logEvent("kitchen_alert", "Kitchen Hazard Detected");
  }

  Blynk.run();
  delay(2000);
}
