// LED-08 Running Light Forward & Reverse
// LEDs run forward and backward

int leds[] = {2, 4, 5};
int count = 3;

void setup() {
  for (int i = 0; i < count; i++) {
    pinMode(leds[i], OUTPUT);
  }
}

void loop() {
  // Forward
  for (int i = 0; i < count; i++) {
    digitalWrite(leds[i], HIGH);
    delay(300);
    digitalWrite(leds[i], LOW);
  }

  // Reverse
  for (int i = count - 1; i >= 0; i--) {
    digitalWrite(leds[i], HIGH);
    delay(300);
    digitalWrite(leds[i], LOW);
  }
}
