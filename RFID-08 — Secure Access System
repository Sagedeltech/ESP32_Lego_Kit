// RFID-08 Secure Access System
// Complete RFID access control system

#include <SPI.h>
#include <MFRC522.h>

#define SS_PIN 5
#define RST_PIN 22
#define RELAY 25
#define BUZZER 18

MFRC522 rfid(SS_PIN, RST_PIN);
byte allowedUID[4] = {0xDE, 0xAD, 0xBE, 0xEF};

void setup() {
  pinMode(RELAY, OUTPUT);
  pinMode(BUZZER, OUTPUT);
  SPI.begin();
  rfid.PCD_Init();
}

void loop() {
  if (rfid.PICC_IsNewCardPresent() && rfid.PICC_ReadCardSerial()) {
    bool access = true;

    for (byte i = 0; i < 4; i++) {
      if (rfid.uid.uidByte[i] != allowedUID[i]) {
        access = false;
      }
    }

    if (access) {
      digitalWrite(RELAY, HIGH);
      digitalWrite(BUZZER, HIGH);
      delay(200);
      digitalWrite(BUZZER, LOW);
      delay(2000);
      digitalWrite(RELAY, LOW);
    } else {
      for (int i = 0; i < 3; i++) {
        digitalWrite(BUZZER, HIGH);
        delay(150);
        digitalWrite(BUZZER, LOW);
        delay(150);
      }
    }

    rfid.PICC_HaltA();
  }
}
