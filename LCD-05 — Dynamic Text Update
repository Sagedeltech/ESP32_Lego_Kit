// LCD-05 Dynamic Text Update
// Updates displayed values in real-time

#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);
int value = 0;

void setup() {
  lcd.init();
  lcd.backlight();
}

void loop() {
  lcd.setCursor(0, 0);
  lcd.print("Value: ");
  lcd.print(value);
  value++;

  delay(500);
}
