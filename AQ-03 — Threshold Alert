// AQ-03 Threshold Alert
// Alerts when air pollution crosses limit

#define AQ_PIN 34
#define BUZZER 18

void setup() {
  pinMode(BUZZER, OUTPUT);
}

void loop() {
  int value = analogRead(AQ_PIN);

  if (value > 2500) {
    digitalWrite(BUZZER, HIGH);
  } else {
    digitalWrite(BUZZER, LOW);
  }

  delay(1000);
}
