// BL-14 RFID IoT Cloud Access
// Sends RFID UID via Bluetooth (cloud-ready)

#include "BluetoothSerial.h"
#include <SPI.h>
#include <MFRC522.h>

#define SS_PIN 5
#define RST_PIN 22

BluetoothSerial SerialBT;
MFRC522 rfid(SS_PIN, RST_PIN);

void setup() {
  SerialBT.begin("ESP32_RFID_BT");
  SPI.begin();
  rfid.PCD_Init();
}

void loop() {
  if (rfid.PICC_IsNewCardPresent() && rfid.PICC_ReadCardSerial()) {
    SerialBT.print("UID:");
    for (byte i = 0; i < rfid.uid.size; i++) {
      SerialBT.print(rfid.uid.uidByte[i], HEX);
    }
    SerialBT.println();
    rfid.PICC_HaltA();
    delay(1500);
  }
}
