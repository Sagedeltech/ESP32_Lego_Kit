// BL-07 RGB Control IoT
// Controls RGB LED via Bluetooth commands

#include "BluetoothSerial.h"

BluetoothSerial SerialBT;

#define R 25
#define G 26
#define B 27

void setup() {
  pinMode(R, OUTPUT);
  pinMode(G, OUTPUT);
  pinMode(B, OUTPUT);
  SerialBT.begin("ESP32_RGB_BT");
}

void loop() {
  if (SerialBT.available()) {
    char cmd = SerialBT.read();

    if (cmd == 'R') { digitalWrite(R, HIGH); digitalWrite(G, LOW);  digitalWrite(B, LOW);  }
    if (cmd == 'G') { digitalWrite(R, LOW);  digitalWrite(G, HIGH); digitalWrite(B, LOW);  }
    if (cmd == 'B') { digitalWrite(R, LOW);  digitalWrite(G, LOW);  digitalWrite(B, HIGH); }
  }
}
