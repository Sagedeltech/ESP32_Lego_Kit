// LED-05 Independent LED Control
// Controls three LEDs independently

#define LED1 2
#define LED2 4
#define LED3 5

void setup() {
  pinMode(LED1, OUTPUT);
  pinMode(LED2, OUTPUT);
  pinMode(LED3, OUTPUT);
}

void loop() {
  digitalWrite(LED1, HIGH);
  delay(300);
  digitalWrite(LED1, LOW);

  digitalWrite(LED2, HIGH);
  delay(300);
  digitalWrite(LED2, LOW);

  digitalWrite(LED3, HIGH);
  delay(300);
  digitalWrite(LED3, LOW);
}
