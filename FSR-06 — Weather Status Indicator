// FSR-06 Weather Status Indicator
// Indicates rain status using LED

#define RAIN_PIN 34
#define LED 2

void setup() {
  pinMode(LED, OUTPUT);
}

void loop() {
  int rain = analogRead(RAIN_PIN);

  if (rain < 2000) {
    digitalWrite(LED, HIGH); // Raining
  } else {
    digitalWrite(LED, LOW);  // Dry
  }

  delay(500);
}
