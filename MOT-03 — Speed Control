// MOT-03 Speed Control
// Controls motor speed using PWM

#define MOTOR_PIN 26
#define PWM_CH 0

void setup() {
  ledcSetup(PWM_CH, 5000, 8);
  ledcAttachPin(MOTOR_PIN, PWM_CH);
}

void loop() {
  for (int speed = 0; speed <= 255; speed += 10) {
    ledcWrite(PWM_CH, speed);
    delay(100);
  }

  for (int speed = 255; speed >= 0; speed -= 10) {
    ledcWrite(PWM_CH, speed);
    delay(100);
  }
}
