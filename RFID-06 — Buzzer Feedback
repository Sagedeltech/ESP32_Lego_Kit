// RFID-06 Buzzer Feedback
// Buzzer sounds on card detection

#include <SPI.h>
#include <MFRC522.h>

#define SS_PIN 5
#define RST_PIN 22
#define BUZZER 18

MFRC522 rfid(SS_PIN, RST_PIN);

void setup() {
  pinMode(BUZZER, OUTPUT);
  SPI.begin();
  rfid.PCD_Init();
}

void loop() {
  if (rfid.PICC_IsNewCardPresent()) {
    digitalWrite(BUZZER, HIGH);
    delay(200);
    digitalWrite(BUZZER, LOW);
    delay(1000);
  }
}
