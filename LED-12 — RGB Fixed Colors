// LED-12 RGB Fixed Colors
// Displays predefined colors

#define R 25
#define G 26
#define B 27

void setup() {
  pinMode(R, OUTPUT);
  pinMode(G, OUTPUT);
  pinMode(B, OUTPUT);
}

void loop() {
  // Red
  digitalWrite(R, HIGH); digitalWrite(G, LOW); digitalWrite(B, LOW);
  delay(1000);

  // Green
  digitalWrite(R, LOW); digitalWrite(G, HIGH); digitalWrite(B, LOW);
  delay(1000);

  // Blue
  digitalWrite(R, LOW); digitalWrite(G, LOW); digitalWrite(B, HIGH);
  delay(1000);
}
