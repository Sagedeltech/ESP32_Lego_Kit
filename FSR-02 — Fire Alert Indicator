// FSR-02 Fire Alert Indicator
// Indicates fire using LED

#define FLAME_PIN 32
#define LED 2

void setup() {
  pinMode(LED, OUTPUT);
}

void loop() {
  int flame = analogRead(FLAME_PIN);

  if (flame < 2000) {
    digitalWrite(LED, HIGH); // Fire detected
  } else {
    digitalWrite(LED, LOW);
  }

  delay(300);
}
