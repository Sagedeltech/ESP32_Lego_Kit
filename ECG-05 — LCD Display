// ECG-05 LCD Display
// Displays ECG value on LCD

#include <Wire.h>
#include <LiquidCrystal_I2C.h>

#define ECG_PIN 36

LiquidCrystal_I2C lcd(0x27, 16, 2);

void setup() {
  lcd.init();
  lcd.backlight();
}

void loop() {
  int ecg = analogRead(ECG_PIN);

  lcd.setCursor(0, 0);
  lcd.print("ECG Value:");
  lcd.setCursor(0, 1);
  lcd.print(ecg);
  lcd.print("     ");

  delay(200);
}
